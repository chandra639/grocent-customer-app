<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Location Icon with red line (location disabled) -->
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@android:drawable/ic_menu_mylocation"
        android:tint="#FF0000"
        android:layout_marginBottom="16dp"
        android:contentDescription="Location disabled" />

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location permission not enabled"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enable location permission for a better delivery experience"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- Enable Device Location Button -->
        <Button
            android:id="@+id/btnEnableLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable device location"
            android:layout_marginEnd="8dp" />

        <!-- Select Location Manually Button -->
        <Button
            android:id="@+id/btnSelectManually"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select location manually" />

    </LinearLayout>

</LinearLayout>

