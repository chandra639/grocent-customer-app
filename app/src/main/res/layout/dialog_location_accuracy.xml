<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="For a better experience, your device will need to use Location Accuracy"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The following settings should be on:"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <!-- Device location item -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">
        
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_mylocation"
            android:layout_marginEnd="12dp" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Device location"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Location Accuracy item with description -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_compass"
            android:layout_marginEnd="12dp" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Location Accuracy, which provides more accurate location for apps and services. To do this, Google periodically processes information about device sensors and wireless signals from your device to crowdsource wireless signal locations."
            android:textSize="12sp"
            android:textColor="#666666" />
    </LinearLayout>

    <!-- Info text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You can change this at any time in location settings."
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginBottom="8dp" />

    <!-- Links -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">
        
        <TextView
            android:id="@+id/tvManageSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage settings"
            android:textColor="#2196F3"
            android:textSize="12sp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" | "
            android:textSize="12sp"
            android:layout_marginHorizontal="4dp" />
        
        <TextView
            android:id="@+id/tvLearnMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="learn more"
            android:textColor="#2196F3"
            android:textSize="12sp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- No thanks Button -->
        <Button
            android:id="@+id/btnNoThanks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No, thanks"
            android:textColor="#2196F3"
            android:background="?attr/selectableItemBackground"
            android:layout_marginEnd="16dp" />

        <!-- Turn on Button -->
        <Button
            android:id="@+id/btnTurnOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn on"
            android:textColor="#2196F3"
            android:background="?attr/selectableItemBackground" />

    </LinearLayout>

</LinearLayout>



































