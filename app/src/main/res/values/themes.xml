<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Grocent" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Use launch screen drawable with Grocent logo as window background -->
        <item name="android:windowBackground">@drawable/launch_screen_background</item>
        <item name="android:statusBarColor">#051C10</item>
        <item name="android:navigationBarColor">#051C10</item>
    </style>
    
    <!-- Splash Screen Theme - For Android versions below 12 -->
    <style name="Theme.Grocent.Splash" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Window background - dark green to show immediately when app launches -->
        <item name="android:windowBackground">#051C10</item>
        <!-- Standard window attributes -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">#051C10</item>
        <item name="android:navigationBarColor">#051C10</item>
    </style>
</resources>